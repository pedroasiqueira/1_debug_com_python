  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: exemplo Trybe",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "autoReload": {
          "enable": true
      },
      "justMyCode": false,
      "env": {
           "DEBUG_MODE": "true"
       }
    },
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "purpose": [
        "debug-test"
      ],
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
    }
  ]
}